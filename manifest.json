{
    "manifest_version": 2,
    "name": "TST Colored Tabs",
    "version": "0.1",

    "developer": {
        "name": "Alexey Murz Korepov",
        "url": "https://github.com/MurzNN/tst-colored-tabs"
    },

    "description": "Colorize tabs in Tree Style Tab randomly or based on domain.",

    "applications": {
        "gecko": {
            "id": "tst-colored-tabs@klemens.io"
        }
    },

    "permissions": [
        "tabs",
        "storage"
    ],

    "background": {
        "scripts": [
            "background.js"
        ]
    },

    "options_ui": {
        "page": "options/options.html",
        "browser_style": true
    }
}
